$singleLine /* Make sure the text does not wrap */
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

.product-list .product
    lost-column 1/4
    +below('m')
        lost-column 1/3
    +below('s')
        lost-column 1/2
    +below('xs')
        lost-column 1/1
    a
        color inherit

    &__information
        display flex
        justify-content space-between

    &__label
        flex 1 1 1em
        overflow hidden
        line-height 1.4

    &__name
        @extends $singleLine
        font-weight 600

    &__description
        @extends $singleLine
        color #888

    &__image
        color #888
        height 280px
        lost-align center
        img
            max-width 100%

    &__prices
        min-width 25%
        text-align right
        line-height 1.4

    &__regular-price
        font-weight 600
        color primary-color

.no-results
    lost-column 1 / 2
    lost-move 1 / 4
    background #eee
    padding 2em
    text-align center
    border 1px solid #dedede
    margin-top 3em
    border-radius 2px