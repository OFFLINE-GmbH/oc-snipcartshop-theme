.header
    padding .5em 0
    line-height 1

    &__left,
    &__center
    &__right
        lost-column 1/3

    &__center
        text-align center

        a
            color inherit
            display block

        img
            max-width 100%

.website-heading
    font-family $font-family-headings
    font-size 1.9em
    padding 1rem 0
    margin 0
    color secondary-color
