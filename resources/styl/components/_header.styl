.header
    padding .5em 0
    line-height 1

    &__left,
    &__center,
    &__right
        lost-column 1/3

        +below('m')
            lost-column 1/2
            lost-move 1/2

    &__center
        text-align center
        +below('m')
            text-align left
            lost-move -1/2

        a
            color inherit
            display block

        img
            max-width 100%


    &__left
        +below('m')
            display none

.website-heading
    font-size 1.9em
    padding .7em 0
    margin 0
    color secondary-color
    +below('s')
        font-size 1.4em
        margin-top 1em
    +below('xs')
        line-height 1.4
        margin-top .3em

