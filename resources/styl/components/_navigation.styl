.nav-main
    lost-column 1/1
    text-align center

    .nav-item
        display inline-block
        padding 0
        margin 0
        position relative
        &:first-child
            margin-left 0

        &--active > .nav-link,
        &--child-active > .nav-link
            color primary-color

        &:hover .nav-sub
            display block

.nav-items
    margin 0
    padding 0

.nav-link
    display block
    color inherit
    font-weight 300
    padding 1.1em .8em

.nav-main .nav-sub
    position absolute
    z-index 1
    padding-left 0
    display none
    text-align left
    left 0
    top 51px
    min-width 250px
    box-shadow 0 2px 6px rgba(0, 0, 0, .1)
    background #fff
    .nav-item
        display block
        margin 0

    .nav-link
        display block
        margin 0
        padding .8em

