.product
    &__images
        lost-column 2/5 2

    &__information
        lost-column 3/5 2

    &__main-image
        margin-bottom 3em
        img
            max-width 100%

    &__image-grid > .product-image
        lost-column 1/5 5 10px
        img
            max-width 100%

    &__name
        font-weight 600
        margin 0 0 .5em
        line-height 1.2

    &__description-short
        color #888
        line-height 1.2
        margin 0 0 1em

    &__price
        font-size 1.2em
        font-weight 600
        color primary-color
