.cart
    display block
    position relative
    &__badge
        opacity 0
        position absolute
        right 1.4em
        top .9em
        display inline-block
        padding .5em .5em .1em
        font-size .8em
        line-height 1
        color #fff
        border-radius 50%
        background primary-color
        transition opacity .3s ease-out
        &--visible
            opacity 1

